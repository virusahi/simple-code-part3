#include <stdio.h>

check whether a number is even or odd.  

int main() {

    int n;

    printf(" Please enter any integer: ");

    scanf("%d", &n);

    // true if num is perfectly divisible by 2.

    if(num % 2 == 0)

      printf("%d is an even integer.", n);

    else

        printf("%d is an odd integer.", n);


    return 0;

}
