#include <stdio.h>

check whether a number is even or odd.  

int main() {
//ghithub
    int num;

    printf(" Please enter any numerical integer: ");

    scanf("%d", &num);

    // true if num is perfectly divisible by 2.

    if(num % 2 == 0)

      printf("%d is an even integer.", num);

    else

        printf("%d is an odd integer.", num);


    return 0;

}
